<% include partials/hr %>

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link rel="stylesheet" type="text/css" href="css/appro.css">



					<div class="ui container">


					<!-- <div class="ui cards"> -->
					<div class="ui grid">
						<div class="ui cards">


						<div class="row">
					<%for (i=requests.length-1;i>=0;i--){%>
								<div class="four wide column" style="padding-top:4%;padding-left:2%">
									<div class="ui cards">


										<div class="card">
											<div class="content">
												<img class="right floated mini ui image" src="/img/av.png">
												<div class="header">
													<%=requests[i].identity%>
												</div>
												<div class="meta">
													<%=requests[i].Date.toDateString()%>
												</div>
												<div class="description">
													<%=requests[i].username%> requested permission to take a leave
												</div>
											</div>
											<div class="extra content">
													<div>
														<p><strong>starting date:</strong> <b><%=requests[i].startDate%></b></p>
														<p><strong>ending date:</strong>   <b><%=requests[i].endDate%></b></p>
														<p><strong>number of days:</strong> 	 <b><%=requests[i].totalDays%></b></p>
														<p><strong>email:</strong> 	 <b><%=requests[i].email%></b></p>
														<p><strong>comment:</strong>			 <b><%=requests[i].comment%></b></p>

														<div class="row" style="padding-left:20%">
															<div class="ui buttons">
																<form action="/hap/<%=requests[i]._id%>?_method=PUT" method="POST">
																	<div class="row">
																		<input type="text" name="email" value="<%=requests[i].email%>" class="bye">
																	</div>
																	<div>
																		<button class="ui positive button ld">Approve</button>
																	</div>
																</form>
															<div class="or"></div>
															  <button class="ui button" id="<%=requests[i].id%>">Reject</button>
															</div>
														 <div class="eight wide column">

																		<div class="ui form">
																			<form action="/hap/reject/<%=requests[i]._id%>?_method=PUT" method="POST" class="rej" id="<%=requests[i].id%>2">
																				<div class="row">
																					<input type="text" name="email" value="<%=requests[i].email%>" class="bye">
																				</div>
																				<div class="field">
																					<label style="color:white">Comment Box</label>
																					<textarea name="Comment" style="color:black" required></textarea>
																				</div>
																			<div class="ui buttons" style="padding-top:1%">
																				<button class="ui positive button ld" type="submit">send</button>
																			<div class="or"></div>
																				<a class="ui button" id="<%=requests[i].id%>3">cancel</a>
																			</div>
																		</form>
																</div>
															</div>
														</div>


													</div>
												<!-- <div class="ui two buttons">
													<div class="ui basic green button">Approve</div>
													<div class="ui basic red button">Decline</div>
												</div> -->

												</div>

											</div>

									</div>
								</div>

						<%}%>
						<!-- </div> -->
					</div>
					</div>
					</div>
						</div>
